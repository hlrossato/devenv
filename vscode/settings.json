{
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    // Editor changes
    "editor.fontFamily": "Fira Code iScript",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.formatOnPaste": true,
    "editor.lineHeight": 24,
    "editor.renderWhitespace": "all",
    "editor.tabCompletion": "on",
    "editor.quickSuggestionsDelay": 1,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    // Emmet
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "django-html": "html",
    },
    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    // Files
    "files.associations": {
        "*.html": "django-html"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/.vscode": true,
        "**/.virtualenvs/**": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // Python
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.rulers": [
            72,
            88, // black default
            119,
        ],
    },
    // Python Formatter
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.pyenv/shims/black",
    // Python Linting
    "python.linting.enabled": true,
    "python.linting.flake8Path": "~/.pyenv/shims/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=W504,W503",
        "--verbose"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    // Python VENV
    "python.venvPath": "~/.virtualenvs",
    "python.analysis.symbolsHierarchyDepthLimit": 5,
    "python.autoComplete.showAdvancedMembers": true,
    // ProjectManager
    "projectManager.filterOnFullPath": true,
    // Search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/migrations/**": true,
        "**/.virtualenvs/**": true
    },
    "search.quickOpen.includeSymbols": true,
    // Sync settings
    "sync.gist": "747b7a5ebd69c196a6eacb4e0ca31173",
    "sync.forceUpload": true,
    // Privacy
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Workbench
    "workbench.colorTheme": "Dracula",
    "workbench.editor.tabSizing": "shrink",
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.startupEditor": "newUntitledFile",
    // Window
    "window.zoomLevel": 1,
    // "editor.wordWrap": "wordWrapColumn",
    // "editor.wordWrapColumn": 120,
}
